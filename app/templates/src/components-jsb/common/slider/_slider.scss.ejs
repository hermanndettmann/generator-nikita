.b-slider {
    overflow: hidden;
    position: relative;
    margin: 0 auto;
    border: 1px solid $light-gray;

    .swiper-wrapper {
        z-index: auto;
    }

    .swiper-slide {
        min-height: 200px;
        text-align: center;
        background-color: $primary-color;
    }

    .prev,
    .next {
        position: absolute;
        top: 50%;
        z-index: 1;
        transform: translateY(-50%);
    }

    .prev {
        left: 10px;
    }

    .next {
        right: 10px;
    }
}
